<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
// Function to show toast notifications for other actions if needed
function showToast(message, type = 'success') {
    const toastContainer = document.getElementById('toastContainer');
    if (!toastContainer) {
        console.error('Toast container not found!');
        return;
    }
    const toast = document.createElement('div');
    toast.className = `toast ${type} show`;
    toast.innerHTML = `<div class="toast-message">${message}</div><button class="toast-close">&times;</button>`;
    
    toastContainer.appendChild(toast);
    
    toast.querySelector('.toast-close').addEventListener('click', () => toast.remove());
    setTimeout(() => toast.remove(), 5000);
}

// Enhanced deleteAddress function with SweetAlert
function deleteAddress(addressId) {
    Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/user/delete-address/${addressId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        title: 'Deleted!',
                        text: 'Address deleted successfully.',
                        icon: 'success'
                    }).then(() => {
                        // Optional: remove the address element from the DOM directly
                        // instead of reloading the whole page.
                        window.location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'Failed!',
                        text: data.message || 'Failed to delete address. Please try again.',
                        icon: 'error'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error!',
                    text: 'An unexpected error occurred.',
                    icon: 'error'
                });
            });
        }
    });
}
</script>




